{
  "name": "mcp-gateway",
  "version": "1.0.0",
  "useNamespace": true,
  "logLevel": "info",
  "servers": [
    {
      "name": "context7",
      "transport": "stdio",
      "command": "npx",
      "args": ["-y", "@upstash/context7-mcp@latest"],
      "enabled": true,
      "autoReconnect": true,
      "timeout": 15000
    },
    {
      "name": "chrome-devtools",
      "transport": "stdio",
      "command": "npx",
      "args": ["-y", "chrome-devtools-mcp@latest"],
      "enabled": true,
      "autoReconnect": true,
      "timeout": 15000
    },
    {
      "name": "puppeteer",
      "transport": "stdio",
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-puppeteer"],
      "enabled": true,
      "autoReconnect": true,
      "timeout": 15000
    },
    {
      "name": "filesystem",
      "transport": "stdio",
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-filesystem", "/home/laserkopf"],
      "enabled": true,
      "autoReconnect": true,
      "timeout": 10000
    },
    {
      "name": "fetch",
      "transport": "stdio",
      "command": "npx",
      "args": ["-y", "mcp-fetch"],
      "enabled": true,
      "autoReconnect": true,
      "timeout": 10000
    },
    {
      "name": "brave-search",
      "transport": "stdio",
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-brave-search"],
      "env": {
        "BRAVE_API_KEY": "BSARiNJ09NM8otzEW3_SvOI97E0xkqz"
      },
      "enabled": true,
      "autoReconnect": true,
      "timeout": 10000
    },
    {
      "name": "sequential-thinking",
      "transport": "stdio",
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-sequential-thinking"],
      "enabled": true,
      "autoReconnect": true,
      "timeout": 10000
    }
  ]
}
